{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "*": ["*"]
    },
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist"
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
