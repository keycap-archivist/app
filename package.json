{
  "name": "too-much-artisans-api",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "eslint": "eslint --ext .ts src",
    "prettier": "prettier -c \"./src/**/*.ts\"",
    "prettier:write": "prettier -c \"./src/**/*.ts\" --write",
    "lint": "yarn eslint && yarn prettier",
    "serve": "nodemon -e yml,ts,gql -w ./src -x yarn watch:serve",
    "watch:serve": "ts-node -r dotenv/config src/server.ts",
    "watch:inspect": "nodemon --inspect -e yaml,ts,gql -w ./src -x node -r ts-node/register src/server.ts",
    "build": "rm -rf dist && npx tsc && cp -R src/api/v2-spec.yml dist/api/v2-spec.yml && cp src/api/graphql/schema.gql dist/api/graphql/schema.gql && cp -R src/internal/fonts/ dist/internal/fonts/ && cp -R src/internal/doc/ dist/internal/doc/",
    "package": "sh package.sh"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "app-module-path": "2.2.0",
    "axios": "0.19.2",
    "canvas": "2.6.1",
    "fastify": "3.0.3",
    "fastify-cors": "4.1.0",
    "fastify-gql": "5.1.1",
    "fastify-multipart": "2.0.3",
    "fastify-openapi-glue": "2.0.3",
    "graphql-tools": "^6.0.14",
    "js-yaml": "3.14.0",
    "lodash": "4.17.19",
    "lru_map": "0.4.0",
    "marked": "1.1.1",
    "pino": "6.4.0",
    "pino-pretty": "4.0.3",
    "tablemark": "2.0.0",
    "uuid": "8.2.0"
  },
  "devDependencies": {
    "@ava/typescript": "1.1.1",
    "@types/node": "14.0.23",
    "@typescript-eslint/eslint-plugin": "3.6.1",
    "@typescript-eslint/parser": "3.6.1",
    "ava": "3.10.1",
    "dotenv": "8.2.0",
    "eslint": "7.5.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.4",
    "gqlint": "1.8.0",
    "node-html-parser": "1.2.20",
    "nodemon": "2.0.4",
    "prettier": "2.0.5",
    "ts-node": "8.10.2",
    "tsconfig-paths": "3.9.0",
    "typescript": "3.9.7"
  }
}
